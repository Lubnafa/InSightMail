# InSightMail Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///data/insightmail.db

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=mistral:7b
OLLAMA_BACKUP_MODEL=phi3:mini

# Vector Database Configuration
CHROMA_PERSIST_DIRECTORY=data/embeddings
CHROMA_COLLECTION_NAME=insightmail_emails

# Embedding Model Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
# Alternative: intfloat/e5-small

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=False

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_HOST=localhost

# Gmail API Configuration (Optional)
# Get these from Google Cloud Console
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:8080/oauth2callback

# Email Processing Configuration
MAX_EMAILS_PER_BATCH=50
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.5
EMAIL_PROCESSING_TIMEOUT=300

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/insightmail.log

# Security (for production deployment)
SECRET_KEY=your_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
EMBEDDING_BATCH_SIZE=32
RAG_SEARCH_LIMIT=50

# Feature Flags
ENABLE_GMAIL_API=true
ENABLE_EXPORT_IMPORT=true
ENABLE_ANALYTICS=true
ENABLE_AUTO_CLASSIFICATION=true
